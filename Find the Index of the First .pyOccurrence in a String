class Solution:
    def strStr(self, haystack: str, needle: str) -> int:
        n = len(haystack)
        m = len(needle)

        # needle が空文字の場合
        if m == 0:
            return 0

        # 比較開始位置を順番に試す
        for i in range(n - m + 1):
            if haystack[i:i + m] == needle:
                return i

        return -1
class Solution:
    def strStr(self, haystack: str, needle: str) -> int:
        n = len(haystack)
        m = len(needle)

        # needle が空文字の場合
        if m == 0:
            return 0

        # 比較開始位置を順番に試す
        for i in range(n - m + 1):
            if haystack[i:i + m] == needle:
                return i

        return -1
